1. frontend/pages/index.js



import { useEffect, useState } from "react";
import VideoCard from "../components/VideoCard";

export default function Home() {
  const [project, setProject] = useState(null);

  useEffect(() => {
    fetch("/api/generateProject")
      .then((res) => res.json())
      .then((data) => setProject(data));
  }, []);

  return (
    <div className="min-h-screen flex flex-col items-center justify-center bg-gray-900 text-white p-4">
      <h1 className="text-3xl font-bold mb-6">üéµ ¬°Mira! Acabo de crear esto para ti</h1>
      {project ? <VideoCard project={project} /> : <p>Cargando proyecto...</p>}
    </div>
  );
}

2. frontend/components/VideoCard.js



export default function VideoCard({ project }) {
  return (
    <div className="bg-gray-800 p-4 rounded-lg shadow-lg w-full max-w-2xl flex flex-col items-center">
      <h2 className="text-xl font-semibold mb-4">{project.title}</h2>
      <video controls className="w-full rounded mb-4">
        <source src={project.videoUrl} type="video/mp4" />
        Tu navegador no soporta video.
      </video>
      <audio controls className="w-full mb-4">
        <source src={project.audioUrl} type="audio/mpeg" />
        Tu navegador no soporta audio.
      </audio>
      <div className="flex gap-4">
        <a href={project.videoUrl} download className="bg-blue-500 px-4 py-2 rounded">Descargar Video</a>
        <a href={project.audioUrl} download className="bg-green-500 px-4 py-2 rounded">Descargar M√∫sica</a>
      </div>
      <div className="mt-4 flex gap-4">
        <a href={`https://twitter.com/intent/tweet?text=Mira+esta+cancion&url=${project.videoUrl}`} target="_blank" rel="noreferrer" className="bg-blue-400 px-4 py-2 rounded">Compartir Twitter</a>
        <a href={`https://www.facebook.com/sharer/sharer.php?u=${project.videoUrl}`} target="_blank" rel="noreferrer" className="bg-blue-700 px-4 py-2 rounded">Compartir Facebook</a>
      </div>
    </div>
  );
}

3. backend/api/generateProject.js



export default async function handler(req, res) {
  const project = {
    id: Date.now(),
    title: "Canci√≥n autom√°tica #" + Math.floor(Math.random() * 1000),
    audioUrl: "https://www.soundhelix.com/examples/mp3/SoundHelix-Song-1.mp3",
    videoUrl: "https://sample-videos.com/video123/mp4/720/big_buck_bunny_720p_1mb.mp4",
  };
  res.status(200).json(project);
}

4. backend/api/getLatestProjects.js



export default async function handler(req, res) {
